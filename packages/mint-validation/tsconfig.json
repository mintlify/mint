{
  "compilerOptions": {
    "strict": true,
    "module": "node16",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["ES2020"],
    "outDir": "bin",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/schemas/*": ["src/schemas/*"]
    }
  },
  "include": ["src/**/*"]
}
